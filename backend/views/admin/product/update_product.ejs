                    <div class="col-md-3 mt-2 mb-1">
                        <input type="hidden" name="product_id" value="<%=products[0].product_id%>">
                        <label for="slider_heading">Product Category</label>
                        <input type="text" class="form-control" id="slider_heading" name="product_category"
                            placeholder="Product Category" value="<%=products[0].product_category%>">
                    </div>
                    <div class="col-md-6 mt-2 mb-1">
                        <label for="slider_heading">Product Name</label>
                        <input type="text" class="form-control" id="slider_heading" name="product_name"
                            placeholder="Product Name" value="<%=products[0].product_name%>">
                    </div>
                    <div class="col-md-3 mt-2 mb-1">
                        <label for="slider_heading">Product Price</label>
                        <input type="text" class="form-control" id="slider_heading" name="product_price"
                            placeholder="Product Price" value="<%=products[0].product_price%>">
                    </div>
                    
                    <div class="col-md-3 mt-2 mb-1">
                        <label for="slider_heading">Product Duplicate Price</label>
                        <input type="text" class="form-control" id="slider_heading" name="duplicate_price"
                            placeholder="Product Duplicate Price" value="<%=products[0].duplicate_price%>">
                    </div>
                    
                    <div class="col-md-3 mt-2 mb-1">
                        <label for="slider_heading">Product Size</label>
                        <input type="text" class="form-control" id="slider_heading" name="product_size"
                            placeholder="Product Size" value="<%=products[0].product_size%>">
                    </div>
                    <div class="col-md-2 mt-2 mb-1">
                        <label for="slider_heading">Product Color</label>
                        <input type="color" class="form-control" id="slider_heading" name="product_color"
                            placeholder="Product Color" value="<%=products[0].product_color%>">
                    </div>
                    
                    <div class="col-md-4 mt-2 mb-1">
                        <label for="slider_heading">Product Image1</label>
                        <input type="file" class="form-control" id="slider_heading" name="product_image1"
                            placeholder="Product Information" >
                    </div>
                    
                    <div class="col-md-4 mt-2 mb-1">
                        <label for="slider_heading">Product Image2</label>
                        <input type="file" class="form-control" id="slider_heading" name="product_image2"
                            placeholder="Product Information">
                    </div>
                    
                    <div class="col-md-4 mt-2 mb-1">
