                            placeholder="Product Information">
                    </div>
                    <div class="col-md-12">
                        <div class="row mt-2">
                            <div class="col-md-3">
                                <img src="/uploads/product/<%=products[0].product_image1%>" width="100%" height="150px" alt="">
                                <p class="text-center">Product 1</p>
                            </div>
                            <div class="col-md-3">
                                <img src="/uploads/product/<%=products[0].product_image2%>" width="100%" height="150px" alt="">
                                <p class="text-center">Product 2</p>
                            </div>
                            <div class="col-md-3">
                                <img src="/uploads/product/<%=products[0].product_image3%>" width="100%" height="150px" alt="">
