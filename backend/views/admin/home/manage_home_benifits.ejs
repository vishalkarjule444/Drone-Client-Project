<%-include("../navbar.ejs")%>
    <%-include("../header.ejs")%>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="heading">Manage Home Benifits</h1>
                </div>
            </div>
        </div>
        <form action="/manage_home_benifits" method="post">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 mt-2 mb-1">
                        <label for="slider_button_text">Benifits Heading</label>
                        <input type="text" class="form-control" id="slider_button_text" name="benifits_heading"
                            placeholder="Benifits Heading">
                    </div>

                    <div class="col-md-6 mt-2 mb-1">
                        <label for="slider_product_image">Benifits Icon(font-awesome class eg:- fa fa-trash)</label>
                        <input type="text" class="form-control" id="slider_product_image" name="benifits_icon"
                            placeholder="Benifits Icon(font-awesome class eg:- fa fa-trash)">
                    </div>

                    <div class="col-md-12 mt-2 mb-1 text-center mb-5">
                        <button class="btn btn-primary" type="submit">Save Key Features</button>
                    </div>
                </div>
            </div>
        </form>


        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-hover table-primary">
                    <tr class="bg-primary text-white">
                        <th>Sr No.</th>
                        <th>Action</th>
                        <th>Key Features Heading</th>
                        <th>Key Features Icon(font-awesome class eg:- fa fa-trash)</th>
                    </tr>
                    <%for(var i=0;i<benifits.length;i++){%>
                    <tr>
                        <td><%=i+1%></td>
                        <td>
                            <a href="/edit_home_benifits/<%=benifits[i].home_benifits_id%>">
                                <button class="btn bg-primary btn-sm m-0"><i class="fa fa-edit"></i></button>
                            </a><a href="/delete_home_benifits/<%=benifits[i].home_benifits_id%>">
                                <button class="btn bg-danger btn-sm m-0" onclick="return confirm('Are You Sure?')"><i class="fa fa-trash"></i></button>
                            </a>
                        </td>
                        <td><%=benifits[i].home_benifits_heading%></td>
                        <td><%=benifits[i].home_benifits_icon%></td>
                    </tr>
                    <%}%>
                    </table>
                </div>
            </div>
        </div>
<%-include("../footer.ejs")%>