<%-include("../navbar.ejs")%>
    <%-include("../header.ejs")%>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="heading">Update Home Benifits</h1>
                </div>
            </div>
        </div>
        <form action="/update_home_benifits" method="post">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 mt-2 mb-1">
                        <label for="slider_button_text">Benifits Heading</label>
                        <input type="hidden" name="home_benifits_id" value="<%=benifits[0].home_benifits_id%>">
                        <input type="text" class="form-control" id="slider_button_text" name="benifits_heading"
                            placeholder="Benifits Heading" value="<%=benifits[0].home_benifits_heading%>">
                    </div>

                    <div class="col-md-6 mt-2 mb-1">
                        <label for="slider_product_image">Benifits Icon(font-awesome class eg:- fa fa-trash)</label>
                        <input type="text" class="form-control" id="slider_product_image" name="benifits_icon"
                            placeholder="Benifits Icon(font-awesome class eg:- fa fa-trash)" value="<%=benifits[0].home_benifits_icon%>">
                    </div>

                    <div class="col-md-12 mt-2 mb-1 text-center mb-5">
                        <button class="btn btn-primary" type="submit">Update Benifits</button>
                    </div>
                </div>
            </div>
        </form>
        <%-include("../footer.ejs")%>
