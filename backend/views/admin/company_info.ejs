<%-include('./navbar.ejs')%>
<%-include('./header.ejs')%>
<form action="/update_compnay_information" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-3 shadow">
        <div class="row">
            <div class="col-md-12">
                <h1 class="heading">Compnay Information</h1>
              </div>
              <div class="col-md-4 mb-3 ">
                Company Name
                <input type="text" name="company_name" class="form-control" value="<%=company_info[0].company_name%>">
              </div>
              <div class="col-md-8 mb-3 ">
                Company Details
                <textarea name="company_details" rows="1" class="form-control"><%=company_info[0].company_details%></textarea>
              </div>
              <div class="col-md-4 mb-3 ">
                Company Logo
                <input type="file" accept="image/*" name="company_logo" class="form-control" value="<%=company_info[0].company_logo%>">
              </div>
              <div class="col-md-4">

                <img src="/uploads/<%=company_info[0].company_logo%>" alt="" style="height: 150px;">
              </div>
              <div class="col-md-4 mb-3 ">
                Company Contact No
                <input type="number" name="company_contact_no" class="form-control" value="<%=company_info[0].company_contact_no%>">
              </div>
              <div class="col-md-5 mb-3 ">
                Company Contact email
                <input type="email" name="company_contact_email" class="form-control" value="<%=company_info[0].company_contact_email%>">
              </div>
              <div class="col-md-7 mb-3 ">
                Company Address
                <textarea name="company_address" rows="1" class="form-control"><%=company_info[0].company_address%></textarea>
              </div>
              <div class="col-md-4 mb-3 ">
                Company Location
                <textarea name="company_location" rows="1" class="form-control"><%=company_info[0].company_location%></textarea>
              </div>
              <div class="col-md-4 mb-3 ">
                Company Facebook Link
                <input type="text" name="company_facebook_link" class="form-control" value="<%=company_info[0].company_facebook_link%>">
              </div>
              <div class="col-md-4 mb-3 ">
                Company Twitter Link
                <input type="text" name="company_twitter_link" class="form-control" value="<%=company_info[0].company_twitter_link%>">
              </div>
              <div class="col-md-4 mb-3 ">
                Company Whatsapp Link
                <input type="text" name="company_whatsapp_link" class="form-control" value="<%=company_info[0].company_whatsapp_link%>">
              </div>
              <div class="col-md-4 mb-3 ">
                  Company Instagram Link
                  <input type="text" name="company_instagram_link" class="form-control" value="<%=company_info[0].company_instagram_link%>">
                </div>
                <div class="col-md-4 mb-3 ">
                    Company Linkedin Link
                    <input type="text" name="company_linkedin_link" class="form-control" value="<%=company_info[0].company_linkedin_link%>">
                </div>
                <div class="col-md-4 mb-3 ">
                    Company Telegram Link
                    <input type="text" name="company_telegram_link" class="form-control" value="<%=company_info[0].company_telegram_link%>">
                </div>
                <div class="col-md-12 mb-3 text-center">
                    <button class="btn btn-dark">Update Information</button>
                </div>
            </div>
    </div>
</form>
<%-include('footer.ejs')%>
